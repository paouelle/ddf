<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0">
    <ext:property-placeholder placeholder-prefix="$[" placeholder-suffix="]"/>

    <reference id="mapper"
               interface="org.codice.ddf.config.mapping.ConfigMappingService"
               availability="mandatory"/>

    <bean id="fileMonitor"
          class="org.codice.ddf.config.mapping.file.impl.OSGIConfigMappingFileMonitor"
          destroy-method="close">
        <argument ref="mapper"/>
        <argument>
            <set>
                <value>$[ddf.home]/etc/mappings</value>
            </set>
        </argument>
    </bean>

    <!--
      higher ranking to ensure we are consulted first. note that the file monitor will ensure we
      only handle files that are from the mappings folder and none other
    -->
    <service ref="fileMonitor" ranking="1000">
        <interfaces>
            <value>org.apache.felix.fileinstall.ArtifactListener</value>
            <value>org.apache.felix.fileinstall.ArtifactInstaller</value>
        </interfaces>
    </service>
</blueprint>